<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="CustomItemDetailView">
        <attr name="item_bg" format="reference"/>
        <attr name="item_height" format="dimension"/>
        <attr name="left_name" format="string"/>
        <attr name="left_name_color" format="color"/>
        <attr name="left_text_size" format="integer"/>
        <attr name="right_name" format="string"/>
        <attr name="right_name_color" format="color"/>
        <attr name="right_text_size" format="integer"/>
        <attr name="right_icon" format="reference"/>
        <attr name="right_photo" format="reference"/>
    </declare-styleable>

    <!-- 雷达扩散效果 -->
    <declare-styleable name="RippleBackground">
        <attr name="rb_color" format="color" />
        <attr name="rb_strokeWidth" format="dimension"/>
        <attr name="rb_radius" format="dimension"/>
        <attr name="rb_duration" format="integer"/>
        <attr name="rb_rippleAmount" format="integer"/>
        <attr name="rb_scale" format="integer"/>
        <attr name="rb_type" format="integer"/>
    </declare-styleable>

</resources>